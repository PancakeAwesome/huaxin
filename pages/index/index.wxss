/*voice in item*/
.item .voice-box-rp {
    width: 150px;
    height: 40px;
    /*border:initial;*/
    /*background: #3FB1DE;*/
    position: relative;
    border-radius: 5px;
    float: left;
    margin-left:30rpx;
    background: url('http://120.77.213.75/static/wxss/img_voice_bg.png') no-repeat;
    background-size:cover;
    /*margin-bottom: 10px;*/
}
.voice-box-pause {
  background: url('http://120.77.213.75/static/wxss/icon_voice.png') no-repeat;
  background-size:16px 22px;
  margin:9px 0 0 15px;
  width:16px;
  height:22px;
}
.voice_duration{
  position: absolute;
  /*right: 83px;*/
  /*top: .5rem;*/
  top:12px;
  color: #fff;
  left: 45px;
}
.voice-box-rp:before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 200%;
    height: 200%;
    /*border: 1px solid #d6d6d6;*/
    border-radius: 5px;
    -webkit-transform-origin: 0 0;
    -moz-transform-origin: 0 0;
    -ms-transform-origin: 0 0;
    -o-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scale(0.5,0.5);
    -ms-transform: scale(0.5,0.5);
    -o-transform: scale(0.5,0.5);
    transform: scale(0.5,0.5);
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
