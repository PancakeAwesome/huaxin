@import "../../lib/css/public.wxss";
@import "../find/find.wxss";
.action{
    background-size: cover;
    margin-bottom:20rpx;
    color: #fff
}
.action_title{
  margin-bottom:20rpx;
  font-size:1.4rem;
}
.action > .action_first{
    display: flex;
    flex-direction: column;
    padding:20px;
}
.action > .action_first image{
    width:1rem;
    height:1rem;
    margin-right:10rpx;
}
.action > .action_second{
    display: flex;
    justify-content: flex-end;
    padding: 20px 10px;
}
.action_second > text{
    background: #42B8DB;
    color: #fff;
    padding: 2px;
}
.action_first > .action_time{
    display: flex;
    align-items: center;
}
.action_first > .action_location{
    display: flex;
    align-items: center;
}