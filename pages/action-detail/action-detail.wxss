.content{
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 90%;
    margin: 30px auto;
    position: relative;
    border-radius:10px;
}
.action_kind{
  margin-top: 20rpx;
}
.post_pic{
    width: 100%;
    height: 350rpx;
    border-radius:10px 10px 0 0;
}
.post_pic > image{
    width: 100%;
    height:100%;
}
.action_kind > view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.action_title{
    font-size: 1.2rem;
    font-weight: bolder;
    padding: 20rpx
}
.action_time_loc{
    font-size: .6rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 80%;
    color: #35b1e0;
    margin-bottom: 30rpx;
    /*padding: 10px;*/
}
.action_time_loc view{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    /*padding: 0 10rpx;*/
}
.action_tips > ul{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    color: #606060;
    font-size:.7rem;
    line-height: 1rem;
    /*list-style-type: disc;*/
    /*width: 80%;*/
}
.action_tips li{
  list-style-type: disc;
  margin-bottom: 10rpx;
  color:#606060;
}
.submit-bomb{
  position: fixed;
  bottom:0;
  left: 0;
  background: #fff;
  padding: 20px;
  text-align: center;
  width: 100%;
  border-bottom: 1px #EEEEEE solid;
  font-size: 15px;
  color: #4c4c4c;
  z-index: 5;
  /*display: none;*/
}
.submit-bomb view{
  padding: 10px;
  border-bottom:1px #EEEEEE solid;
}
.submit-bomb2{
  position: fixed;
  bottom:0;
  left:0;
  background: #fff;
  padding: 20px;
  text-align: center;
  width: 100%;
  border-bottom: 1px #EEEEEE solid;
  font-size: 15px;
  color: #4c4c4c;
  z-index: 6;
  /*display: none;*/
}
.submit-bomb2 view{
  padding: 10px;
  border-bottom:1px #EEEEEE solid;
}
.action_hint{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.action_hint image{
  margin-right:20px;
}
.action_hint > .text_hint{
  color: #ff6277;
  font-size: .6rem;
}
.action_time > image,.action_location > image{
  width:1rem;
  height:1.2rem;
}
.integral_rotate{
  display: absolute;
  transform: rotate(40deg); 
  -o-transform: rotate(40deg); 
  -webkit-transform: rotate(40deg); 
  -moz-transform: rotate(40deg); 
}
