/*top navigate_bar*/
.right > image{
  width:1.3rem;
  height:1.3rem;
}
.integral_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background-size: cover;
  height: 100px;
  width: 100%;
  background: #42B8DB;
}
.integral_box > .big_num{
  font-size: 2.5rem;
  color: #F8FCFE;
  font-weight: bold;
}
.medal_text{
  padding: 10px;
  margin-left: 10px;
  font-size: .8rem;
}
.medal_box{
  background: #fff;
  height: 200px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.medal_box > .medal1{
  width: 40%;
  height: 71%;
}
.medal1 > image{
  width: 100%;
  height: 100%;
}
.medal_box > .medal2{
  width: 40%;
  height: 71%;
}
.medal2 > image{
  width: 100%;
  height: 100%;
}
.tab{
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: .8rem;
    /*border-top: 1px #B7B7B7 solid;*/
    border-bottom: 1px #E8E8E8 solid;
    color: #343434;
}
.tab > view {
  width: 25%;
  text-align: center;
}
.list_item{
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: .8rem;
    color: #343434;
    border-bottom: 1px #E8E8E8 solid;
    padding: 10px;
}
.list_item > view {
  width: 25%;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  text-align:center;
}
.integral{
    display: flex;
    justify-content: center;
    align-items: center;
}
.integral img{
    width: 1rem;
}
.bomb-box{
  top:50%;
  font-size: .8rem;
  color: #4A4A4A;
  height:initial;
  padding: 10px;
}
.bomb-box > view{
  padding: 10px;
}
.bomb-box > button{
  margin-bottom:20px;
}
.bomb_title{
  color: #4E4E4D;
  font-size: 1rem;
  text-align: center;
}
.bomb_cancle{
  width: 100%;
  height: 20px;
  text-align: right;
}
.bomb_cancle > image{
  width: 1rem;
  height: 1rem;
}
.bomb_imgbox{
  width: 100%;
  height: 102px;
}
.bomb_imgbox > image{
  width: 100px;
  height: 100%;
}